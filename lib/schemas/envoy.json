{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "id": "kumonos-configuration",
  "additionalProperties": true,
  "required": [
    "version",
    "listener",
    "admin",
    "discovery_service"
  ],
  "properties": {
    "version": {
      "type": "integer",
      "id": "/properties/version"
    },
    "listener": {
      "type": "object",
      "id": "/properties/listener",
      "additionalProperties": false,
      "required": [
        "address",
        "access_log_path"
      ],
      "properties": {
        "address": {
          "type": "string",
          "id": "/properties/listener/properties/address"
        },
        "access_log_path": {
          "type": "string",
          "id": "/properties/listener/properties/access_log_path"
        }
      }
    },
    "admin": {
      "type": "object",
      "id": "/properties/admin",
      "additionalProperties": false,
      "required": [
        "address",
        "access_log_path"
      ],
      "properties": {
        "address": {
          "type": "string",
          "id": "/properties/admin/properties/address"
        },
        "access_log_path": {
          "type": "string",
          "id": "/properties/admin/properties/access_log_path"
        }
      }
    },
    "discovery_service": {
      "type": "object",
      "id": "/properties/discovery_service",
      "additionalProperties": false,
      "required": [
        "lb",
        "tls",
        "refresh_delay_ms",
        "connect_timeout_ms"
      ],
      "properties": {
        "lb": {
          "type": "string",
          "id": "/properties/discovery_service/properties/properties/lb"
        },
        "tls": {
          "type": "boolean",
          "id": "/properties/discovery_service/properties/properties/tls"
        },
        "refresh_delay_ms": {
          "type": "integer",
          "id": "/properties/discovery_service/properties/refresh_delay_ms"
        },
        "connect_timeout_ms": {
          "type": "integer",
          "id": "/properties/discovery_service/properties/properties/connect_timeout_ms"
        }
      }
    },
    "statsd": {
      "type": "object",
      "id": "/properties/statsd",
      "additionalProperties": false,
      "required": [
        "address",
        "tls",
        "type",
        "connect_timeout_ms"
      ],
      "properties": {
        "address": {
          "type": "string",
          "id": "/properties/statsd/properties/address"
        },
        "tls": {
          "type": "boolean",
          "id": "/properties/statsd/properties/tls"
        },
        "type": {
          "type": "string",
          "id": "/properties/statsd/properties/type"
        },
        "connect_timeout_ms": {
          "type": "integer",
          "id": "/properties/statsd/properties/connect_timeout_ms"
        }
      }
    }
  }
}
